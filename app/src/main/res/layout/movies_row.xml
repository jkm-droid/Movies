<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/movies_row_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/movie_banner"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:background="@drawable/movie_banner_bg"
        android:padding="2dp"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/movie_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/movie_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toEndOf="@id/movie_banner"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/movie_year"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/movie_banner"
        android:layout_below="@id/movie_name"
        android:text="@string/movie_year"
        android:layout_toEndOf="@id/movie_banner"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/movie_duration"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/movie_banner"
        android:layout_below="@id/movie_year"
        android:text="@string/movie_duration"
        android:layout_toEndOf="@id/movie_banner"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/movie_rating"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_rating"
        android:layout_below="@id/movie_duration"
        android:layout_toRightOf="@id/movie_banner"
        android:layout_toEndOf="@id/movie_banner"
        android:layout_marginStart="5dp" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_duration"
        style="?ratingBarStyleSmall"
        android:layout_toRightOf="@id/movie_rating"
        android:numStars="5"
        android:rating="2.5"
        android:layout_toEndOf="@id/movie_rating" />


</RelativeLayout>